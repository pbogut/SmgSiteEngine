<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.css') }}" rel="stylesheet">
            <link href="{{ asset('bootstrap/css/bootstrap-responsive.css') }}" rel="stylesheet">
            <link href="{{ asset('bootstrap/css/docs.css" rel="stylesheet') }}">
            <link href="{{ asset('bootstrap/js/google-code-prettify/prettify.css') }}" rel="stylesheet">
            <link href="{{ asset('fancybox/jquery.fancybox-1.3.4.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <style>body { padding-bottom: 40px }</style>
    </head>
    <body style="padding: 40px" >
        
    <div class="navbar navbar-inner navbar-fixed-top">
        
    <ul class="nav">
        <li><a href="#">{% if app.user %}Witaj! {{ app.user.username }}{% endif %}</a></li>
    </ul>
        
    <ul class="pull-right nav">
        <li>{% if app.user %}<a href="{{ path('smg_user_logout') }}">Wyloguj</a>{% else %}<a href="{{ path('smg_user_login') }}">Zaloguj</a>{% endif %}</li>
    </ul>
        <h1 align="center">Smg Site Engine</h1>
    </div>

        <div class="row">
            <div class="span12">{{ smg_menu('mainMenu') }}</div>
            <div class="span12 container">
                <div class="span2">
                {% block sidebar %}
                    {{ smg_menu('navMenu') }}
                {% endblock %}
                </div>
                <div class="span8">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script src="http://twitter.github.com/bootstrap/assets/js/bootstrap-modal.js"></script>
        <script src="{{ asset('fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
        <script type="text/javascript"> 
            $(document).ready(function() {
                $("a.fancybox").fancybox({ 
                    //'width': '30%', 
                    //'height': '50%', 
                    //'autoScale': false, 
                    'onClosed': function() { 
                        parent.location.reload(true); 
                    } 
                });
            });
        </script>
        {% endblock %}
        {% block extrajs %}{% endblock %}
    </body>
</html>
